---
import "../styles/base.css"
const { id } = Astro.props;
const closeButtonId = `close-button-${id}`;
---

<dialog id={id} class="fixed inset-0 z-50 m-auto overflow-hidden bg-transparent backdrop:bg-[#00000050] backdrop:bg-opacity-75 outline-none">
    <div class="relative flex items-center justify-center min-h-screen p-4">
        <div class="relative max-w-7xl">
            <button id={closeButtonId} class="absolute top-4 right-4 text-white outline-none">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="size-10">
                    <path stroke-linecap="round" stroke-linejoin="round" d="m9.75 9.75 4.5 4.5m0-4.5-4.5 4.5M21 12a9 9 0 1 1-18 0 9 9 0 0 1 18 0Z" />
                </svg>
            </button>
                <slot />
        </div>
    </div>
</dialog>

<script define:vars={{ id }}>
    const dialog = document.getElementById(id);
    const closeButton = document.querySelector(`#close-button-${id}`);
    
    dialog?.addEventListener('click', (e) => {
        if (e.target === dialog) {
            dialog.close();
        }
    });
    
    closeButton?.addEventListener('click', () => {
        dialog?.close();
    });
</script>